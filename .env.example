# Copy this file to .env and update with your actual values

# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_NAME=suatalk_db
DB_USER=postgres
DB_PASS=your_password_here

# JWT Configuration
JWT_ACCESS_SECRET=your_jwt_secret_here_make_it_very_long_and_secure_at_least_64_characters
JWT_ACCESS_EXPIRES_IN=7d
JWT_REFRESH_SECRET=your_jwt_refresh_secret_here_also_very_long_and_secure_64_chars
JWT_REFRESH_EXPIRES_IN=30d

# Email Configuration (for OTP and notifications)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your_email@gmail.com
EMAIL_PASS=your_app_password_here

# Google OAuth Configuration
GOOGLE_CLIENT_ID=your_google_client_id_here
GOOGLE_CLIENT_SECRET=your_google_client_secret_here
GOOGLE_CALLBACK_URL=http://localhost:3000/api/auth/google/callback

# Session Configuration
SESSION_SECRET=your_session_secret_here_very_long_and_secure_for_oauth

# Application Configuration
NODE_ENV=development
PORT=3000
CLIENT_URL=http://localhost:3000

# Optional: For production environments
# CORS_ORIGIN=https://yourdomain.com
# ALLOWED_ORIGINS=https://yourdomain.com,https://www.yourdomain.com

# Machine Learning Service Configuration
ML_SERVICE_URL=http://localhost:4000

# Logging
LOG_LEVEL=debug
LOG_FILE_PATH=./logs 